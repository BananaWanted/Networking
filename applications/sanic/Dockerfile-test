FROM python:stretch

ENV WEB_CONCURRENCY=4
EXPOSE 80

COPY . /workspace
WORKDIR /workspace
RUN pip install -r requirements.txt \
    && pip install -r requirements-test.txt \
    && rm -rf .

CMD ["/usr/local/bin/gunicorn", "--worker-class", "sanic.worker.GunicornWorker", "--bind=0.0.0.0:80", \
    "--access-logfile", "-", \
    "--error-logfile", "-", \
    "app:app"] 
